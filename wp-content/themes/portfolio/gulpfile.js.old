// Required packages
const gulp = require('gulp');
const sass = require('gulp-sass')(require('sass'));
const autoprefixer = require('gulp-autoprefixer');
const uglify = require('gulp-uglify');
const rename = require('gulp-rename');
const sourcemaps = require('gulp-sourcemaps');
const imagemin = require('gulp-imagemin');
const imageResize = require('gulp-image-resize');

/* Admin tasks
-------------------------------------------------------------- */
gulp.task('adminSass', function () {
  return gulp
    .src('admin/src/admin-styles.scss')
    .pipe(sourcemaps.init())
    .pipe(
      sass({
        outputStyle: 'compressed',
        includePaths: ['./node_modules'],
      }).on('error', sass.logError)
    )
    .pipe(autoprefixer())
    .pipe(rename({ suffix: '.min' }))
    .pipe(sourcemaps.write('.'))
    .pipe(gulp.dest('admin/dist'));
});

gulp.task('adminJs', function () {
  return gulp
    .src('admin/src/admin-scripts.js')
    .pipe(sourcemaps.init())
    .pipe(uglify())
    .pipe(rename({ suffix: '.min' }))
    .pipe(sourcemaps.write('.'))
    .pipe(gulp.dest('admin/dist'));
});

/* Theme tasks
-------------------------------------------------------------- */
// Sass
gulp.task('themeSass', function () {
  return gulp
    .src('src/scss/main.scss')
    .pipe(sourcemaps.init())
    .pipe(
      sass({
        outputStyle: 'compressed',
        includePaths: ['./node_modules'],
      }).on('error', sass.logError)
    )
    .pipe(autoprefixer())
    .pipe(rename({ suffix: '.min' }))
    .pipe(sourcemaps.write('.'))
    .pipe(gulp.dest('dist'));
});

// .js
gulp.task('themeJs', function () {
  return gulp
    .src('src/js/**/*.js')
    .pipe(sourcemaps.init())
    .pipe(uglify())
    .pipe(rename({ suffix: '.min' }))
    .pipe(sourcemaps.write('.'))
    .pipe(gulp.dest('dist'));
});

/* Watch task
-------------------------------------------------------------- */
gulp.task('watch', function () {
  // Watch Sass files
  gulp.watch('admin/src/**/*.scss', gulp.series('adminSass'));
  gulp.watch('src/scss/**/*.scss', gulp.series('themeSass'));

  // Watch JavaScript files
  gulp.watch('admin/src/**/*.js', gulp.series('adminJs'));
  gulp.watch('src/js/**/*.js', gulp.series('themeJs'));

  // Watch media folder
});
